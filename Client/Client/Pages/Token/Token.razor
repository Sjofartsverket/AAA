@page "/token"
@inherits TokenBase

<div class="container mt-5">
    <div class="card col-md-6 mx-auto">
        <div class="card-header text-center">
            <h3 class="mb-0">Login</h3>
        </div>
        <div class="card-body">
            <span class="text-danger">@errorMessage</span>
            <form method="post" @onsubmit="HandleSubmit">
                <div class="form-group">
                    <label for="clientId">Client ID:</label>
                    <input type="text" id="clientId" @bind="@clientId" class="form-control" />
                    @if (validationErrors.ContainsKey("ClientId"))
                    {
                        <small class="text-danger">@validationErrors["ClientId"]</small>
                    }
                </div>
                <div class="form-group">
                    <label for="clientSecret">Client Secret:</label>
                    <input type="password" id="clientSecret" @bind="@clientSecret" class="form-control" />
                    @if (validationErrors.ContainsKey("ClientSecret"))
                    {
                        <small class="text-danger">@validationErrors["ClientSecret"]</small>
                    }
                </div>
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <button type="submit" class="btn btn-primary" disabled="@isFetchingToken">
                            @if (isFetchingToken)
                            {
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="sr-only"></span>
                                </div>
                            }
                            else
                            {
                                <span>Submit</span>
                            }
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

